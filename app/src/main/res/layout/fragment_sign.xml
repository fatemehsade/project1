<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_width="match_parent"
    android:background="#FBF9FA"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:rotationY="-12"
        android:scaleType="fitCenter"
        android:src="@drawable/signgirl" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edit_text_user_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:bufferType="spannable"
            android:hint="User Name"
            android:inputType="textPhonetic"
            android:padding="4dp"
            android:textSize="25sp"
            android:background="#A53259"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_text_password_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:background="#A53259"
            android:padding="4dp"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_signup_sign"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:bufferType="normal"
            android:inputType="textFilter"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="sign up"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:backgroundTint="#510834" />


    </LinearLayout>
</LinearLayout>