<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/item_title"
        android:layout_margin="8dp"
        android:hint=" موضوع"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/img_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_date"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_title"
        android:layout_toRightOf="@+id/img_circle"
        android:textSize="15dp"
        android:hint="20/9/99" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/item_date"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/img_circle"
        android:hint="20:33"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/img_circle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle"
        android:gravity="center"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/ima_btn_take_photo"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_circle"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/time_picker_fragment"
        android:padding="8dp"
        android:src="@drawable/ic_camera_new" />


    <ImageButton
        android:id="@+id/share_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_share_icon"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:layout_below="@id/item_title"/>
    

</RelativeLayout>